<div class='container-fluid account'>
  <div class='col-md-2'></div>
  <div class='col-md-8'>
    <div class='info'>
      <div class='col-md-12'>
        <h1>Account</h1>
      </div>
      <div class='col-md-12'>
        <h5>Owner</h5>
        <p><%= @account.user.name %></p>
      </div>
      <div class='col-md-4'>
        <h5>Funds</h5>
        <p><%= @account.amount %></p>
      </div>
      <div class='col-md-8'>
        <h5>Created On</h5>
        <p><%= @account.created_at %></p>
      </div>
      <div class='col-md-12'>
        <p> <%= link_to 'Transfer Funds', new_transfer_path, class: 'btn btn-default' %> </p>
      </div>
    </div>
  </div>
  <div class='col-md-2'></div>
</div>
